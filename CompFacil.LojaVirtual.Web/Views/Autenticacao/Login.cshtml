@model CompFacil.LojaVirtual.Dominio.Entidades.Administrador
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErroEstilo.css" rel="stylesheet" />
    <style type="text/css">
        .panel-heading {
            padding: 5px 15px;
        }

        .panel-footer {
            padding: 1px 15px;
            color: #A0A0A0;
        }

        .profile-img {
            width: 96px;
            height: 96px;
            margin: 0 auto 10px;
            display: block;
            -moz-border-radius: 50%;
            -webkit-border-radius: 50%;
            border-radius: 50%;
        }
    </style>
</head>
<body style="background-image: url('../../background.jpg')">

</body>
</html>
<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong> CompFacil - Login</strong>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Autenticacao", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
                    {
                        @Html.ValidationSummary();
                        <fieldset>
                            <div class="row">
                                <div class="center-block">
                                    <img class="profile-img" src="http://www.lumineers.me/images/core/profile-image-zabadnesterling.gif">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-10 col-md-offset-1">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-user"></i>
                                            </span>
                                            @Html.TextBoxFor(model => model.Login, new { @class = "form-control", placeholder = "Informe seu Login" })
                                            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-lock"></i>
                                            </span>
                                            @Html.PasswordFor(model => model.Senha, new { @class = "form-control", placeholder = "Informe sua Senha" })
                                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Entrar" />
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
                <div class="panel-footer ">
                    Não possui uma conta? <a href="#" onclick=""> Junte-se à nós clicando aqui! </a>
                </div>
            </div>
        </div>
    </div>
</div>
